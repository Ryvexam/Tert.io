{% extends 'base.html.twig' %}
{% block title %}Tertio Informatique - Certification Qualiopi{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }
        .certification-section {
            padding: 160px 0 80px;
            background-color: #ffffff;
        }
        .section-header {
            margin-bottom: 60px;
        }
        .qualiopi-logo {
            max-width: 180px;
            margin-bottom: 30px;
        }
        .certification-card {
            transition: all 0.3s ease;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
        }
        .certification-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }
        .certification-img {
            width: 100%;
            height: auto;
            border-radius: 20px 20px 0 0;
        }


    </style>
{% endblock %}

{% block content %}
    <section id="certification" class="certification-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="certification-card">
                        <img src="{{ asset('assets/img/Formations/Certificat Qualiopi 2024-2027.png') }}" class="certification-img" alt="Certificat Qualiopi 2024-2027">
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}